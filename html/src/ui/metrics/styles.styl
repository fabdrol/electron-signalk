.metrics
  display block
  background-color #eee
  height 100%
  width 100%
  overflow hidden
  padding-left 95px

  .container-fluid, .row, .col-7, .col-5, .col-12, .col-6, .col-4, .col-3
    height 100%
    padding 0

  .block
    width 100%
    height 100%
    display flex
    flex-direction column
    overflow-x hidden
    overflow-y auto

    .block-inner
      flex-grow 1
      margin 5px
      background-color white

      &.middle
        margin-right 20px

      &.last
        margin-left 0
        margin-right 20px

      &.bottom
        margin-top 0

    ul.layouts
      list-style none
      display block
      margin 0
      padding 0
      height 100%
      width 100%

      li
        display block
        width 100%
        height 50px
        line-height 50px
        border-bottom 1px solid #eee

        strong, em
          margin 0 5%

        &.metric
          padding 10px
          line-height 2 !important
          font-size 0.9em

        &.layout strong
           line-height 50px
           height 50px

           i
            margin-right 10px

        &:active, &.selected
          background-color #fafafa

    &.dark
      background-color #222

      .block-inner
        background-color #111

      ul.servers li
        border-bottom-color #666

        strong, em
          color #eee

        &:active, &.selected
          background-color #333
