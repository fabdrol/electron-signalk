.settings
  display block
  background-color #eee
  height 100%
  width 100%
  overflow hidden
  padding-left 95px

  .container-fluid, .row, .col-7, .col-5
    height 100%
    padding 0

  .block
    width 100%
    height 100%
    display flex
    flex-direction column

    .block-inner
      flex-grow 1
      margin 5px
      background-color white

      form
        margin 2em

  ul.servers
    list-style none
    display block
    margin 0
    padding 0
    height 100%
    width 100%

    li
      display block
      width 100%
      height 50px
      line-height 50px
      border-bottom 1px solid #eee

      strong, em
        display block
        width 90%
        margin 0 5%

      strong
        height 30px
        line-height 30px
        font-size 1.1em

      em
        height 15px
        line-height 15px
        font-size 0.7em
        font-family monaco, monospace

        span
          color green

      &.add strong
         line-height 50px
         height 50px

      &:active, &.selected
        background-color #fafafa

  &.dark
    background-color #222

    .block-inner
      background-color #111

    ul.servers li
      border-bottom-color #666

      strong, em
        color #eee

      &:active, &.selected
        background-color #333

    form
      label
        color #eee

      .btn-link
        color #eee
