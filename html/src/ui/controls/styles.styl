.controls
  display block
  background-color #eee
  height 100%
  width 100%
  overflow hidden
  padding-left 100px
  background-image url(/static/x99_outline.png)
  background-size auto 90%
  background-repeat no-repeat
  background-position 98% 40px

  .boxes
    display flex
    position fixed
    width 50%
    height 80px
    left 100px
    bottom 20px
    flex-direction row

    .box
      width 80px
      height 80px
      background #fff
      margin-right 10px
      border-radius 5px

      h3, h4
        text-align center
        font-size 1.7em
        line-height 1.8
        color black

      h3
        margin-top 10px

      h4
        font-size 0.8em
        font-weight normal
        line-height 1

  &.dark
    background-color #222

    .box
      background #111

      h3, h4
        color white

    pre
      color #fff
      padding 1em 0
